<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/uc2_bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一个Button"
        android:layout_marginTop="60dp"

        android:textAllCaps="false"/>
    <Button
        android:id="@+id/uc2_bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/uc2_bt1"
        android:layout_marginLeft="130dp"
        android:text="第二个Button"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/uc2_bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三个Button"
        android:layout_alignLeft="@+id/uc2_bt1"
        android:layout_marginTop="160dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/uc2_bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/uc2_bt3"
        android:layout_alignLeft="@+id/uc2_bt2"
        android:text="第四个Button"
        android:textAllCaps="false"/>
    </RelativeLayout>
    <Button
        android:id="@+id/back_uc2_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="返回" />
</RelativeLayout>
</android.support.constraint.ConstraintLayout>